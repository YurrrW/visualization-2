{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Proportion of Deaths Caused by Air Pollution by Continent",
    "data": {
      "url": "https://raw.githubusercontent.com/YurrrW/visualization-2/main/share-deaths-air-pollution%EF%BC%88new.csv"
    },
    "mark": {"type": "line", "point": true},
    "encoding": {
      "x": {
        "field": "Year",
        "type": "quantitative",
        "axis": {"domain": false, "grid": false, "ticks": false},
        "scale": {"type": "log", "domain": [1990, 2017]}
      },
      "y": {
        "field": "The Share of Deaths Due to Air Pollution",
        "type": "quantitative",
        "title": "Death Rate"
      },
      "color": {
        "field": "Continent",
        "type": "nominal",
        "scale": {
          "domain": [
            "North America",
            "Latin America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "range": [
            "#e41a1c",
            "#984ea3",
            "#ff7f00",
            "#a6cee3",
            "#377eb8",
            "#a65628"
          ]
        }
      },
      "tooltip":[
        {"field":"Continent", "type": "nominal"},
        {"field":"Year","type": "quantitative"},
        {"field":"The Share of Deaths Due to Air Pollution","type": "quantitative","title":""}
  
      ]
    }
  }