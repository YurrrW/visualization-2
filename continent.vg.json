{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "hconcat": [
        {
            "width": 600,
            "height": 300,
            "title": "Proportion of Deaths Caused by PM2.5 by Continent",
            "data": {
                "url": "https://raw.githubusercontent.com/YurrrW/visualization-2/main/share-deaths-air-pollution%EF%BC%88new.csv"
            },
            "params": [
                {
                    "name": "click",
                    "select": {
                        "type": "point",
                        "fields": [
                            "The Share of Deaths Due to Air Pollution"
                        ],
                        "on": "mouseover"
                    }
                }
            ],
            "mark": {
                "type": "point",
                "point": true
            },
            "encoding": {
                "x": {
                    "field": "Year",
                    "type": "quantitative",
                    "title":null,
                    "axis": {
                        "domain": false,
                        "grid": false,
                        "ticks": false
                    },
                    "scale": {
                        "type": "log",
                        "domain": [
                            1990,
                            2017
                        ]
                    }
                },
                "y": {
                    "field": "The Share of Deaths Due to Air Pollution",
                    "type": "quantitative",
                    "title": "Death Rate"
                },
                "opacity": {
                    "condition": {
                        "param": "click",
                        "value": 1
                    },
                    "value": 0.2
                },
                "color": {
                    "param": "click",
                    "field": "Continent",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "North America",
                            "Latin America",
                            "Europe",
                            "Africa",
                            "Asia",
                            "Oceania"
                        ],
                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#a6cee3",
                            "#377eb8",
                            "#a65628"
                        ]
                    },
                    "legend":{"orient": "left"}
                },
                "tooltip": [
                    {
                        "field": "Continent",
                        "type": "nominal"
                    },
                    {
                        "field": "Year",
                        "type": "quantitative"
                    },
                    {
                        "field": "The Share of Deaths Due to Air Pollution",
                        "type": "quantitative",
                        "title": ""
                    }
                ]
            }
        },
        { "title": "Average Proportion of Deaths Due to Air Pollution by Continent (1990-2017)",
        "data": {
            "url": "https://raw.githubusercontent.com/YurrrW/visualization-2/main/continent_rate.csv"
        },
        "width":300,
        "height":300,
        "mark": "bar",
        "encoding": {
            "x": {
                "field": "Continent",
                "type": "nominal",
                "title":null
            },
            "y": {
                "field": "Rate",
                "type": "quantitative",
                "title":"Propotion"
            },
            "tooltip":[
                {"field":"Continent","type": "nominal"},
                {"field":"Rate","type": "quantitative","title":"Average Proption"}
            ],
            "color": {
                "param": "click",
                "field": "Continent",
                "type": "nominal",
                "scale": {
                    "domain": [
                        "North America",
                        "Latin America",
                        "Europe",
                        "Africa",
                        "Asia",
                        "Oceania"
                    ],
                    "range": [
                        "#e41a1c",
                        "#984ea3",
                        "#ff7f00",
                        "#a6cee3",
                        "#377eb8",
                        "#a65628"
                    ]
                }
            }
        }
    }
    ]
}